{
    "name": "rjorel/website",
    "description": "Personal website",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "scrivo/highlight.php": "^9.0",
        "symfony/finder": "^5.0",
        "symfony/http-foundation": "^5.0",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "serve": "APP_DEBUG=true php -S localhost:8000 -t www server.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
