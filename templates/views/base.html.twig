<!DOCTYPE html>
{% apply spaceless %}
<html lang="en">
<head>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="description" content="Raphael Jorel's website" />
    <meta name="author" content="Raphael Jorel" />

    <title>Raphael Jorel - {% block title %}Website{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="stylesheet" href="{{ vite_asset('assets/sass/app.scss') }}" />

    {% block styles %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-expand-md navbar-dark font-duality border-0 bg-brown" style="font-size: 18px;">
    <div class="container">
        <a class="navbar-brand" href="/" style="font-size: 28px;">
            R.Jor-El
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto">

                {% set route = app.request.attributes.get('_route') %}

                <li class="nav-item{{ route == '/skills' ? ' active' : '' }}">
                    <a class="nav-link" href="/skills">Compétences</a>
                </li>
                <li class="nav-item{{ route == '/achievements' ? ' active' : '' }}">
                    <a class="nav-link" href="/achievements">Réalisations</a>
                </li>
                <li class="nav-item{{ route == '/about' ? ' active' : '' }}">
                    <a class="nav-link" href="/about">A propos</a>
                </li>
                <li class="nav-item">
                    <span class="nav-link">&#9679;</span>
                </li>
                <li class="nav-item{{ route == '/repository' ? ' active' : '' }}">
                    <a class="nav-link" href="/repository">Dépôt</a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="mailto:raphael.jorel@laposte.net">
                        <i class="bi-envelope-fill"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/rjorel">
                        <i class="bi-github"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.linkedin.com/in/raphaeljorel/">
                        <i class="bi-linkedin"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main id="app" class="container">
    <div class="font-duality text-center border-top border-bottom border-brown border-2">
        <h1>{% block page_title %}{% endblock %}</h1>
    </div>

    <div class="mt-5 px-3">
        {% block content %}{% endblock %}
    </div>
</main>

<script type="module" src="{{ vite_asset('assets/js/app.js') }}"></script>

{% block scripts %}{% endblock %}
</body>
</html>
{% endapply %}
